const dirLocal = "/app/tpi/data/local/FichiersMvt";
const dirEchange = "/app/tpi/data/echanges/sauve/";
const dirEntrant = "/app/tpi/data/echanges/entrant/";



export interface iFileOutZone {
  server: {
    [key: string]: string
  };
  data: {
    [key: string]: {
      path: string;
      format: string;
    } | undefined;
  };
  log: {
    [key: string]: {
      path: string;
      format: string;
    } | undefined;
  }
}

