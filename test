export interface iFileInZone {
  server: {
    [key: string]: string
  };
  data: {
    [key: string]: {
      path: string;
      extention: string;
      format: string;
    } | undefined;
  };
  log: {
    [key: string]: {
      path: string;
      extention: string;
    } | undefined;
  }
}

